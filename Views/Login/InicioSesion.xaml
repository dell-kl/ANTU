<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ANTU.Views.Login.InicioSesion"
             xmlns:entryCustomizer="clr-namespace:ANTU.Resources.Customizer"
             Title="Login Empresa ANTU"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#D9D6D2">

    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>
    
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarStyle="LightContent" >
            <toolkit:StatusBarBehavior.StatusBarColor>
                <Color>#BF7A24</Color>
            </toolkit:StatusBarBehavior.StatusBarColor>
        </toolkit:StatusBarBehavior>
    </ContentPage.Behaviors>

    <VerticalStackLayout>
        <VerticalStackLayout.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FAF1E5" Offset=".7" />
                <GradientStop Color="#FFF" Offset="1" />
            </LinearGradientBrush>
        </VerticalStackLayout.Background>
        <Border
            x:Name="Header"
            MinimumHeightRequest="130"
            StrokeThickness="0"
            BackgroundColor="#BF7A24"
            >
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#BF7A24" Offset=".6"/>
                    <GradientStop Color="#BF8924" Offset=".6"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0, 0, 30, 30" />
            </Border.StrokeShape>
            <Label Text="ANTU Empresa" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" FontSize="40" FontFamily="SegoeUIBold" />
        </Border>

        <Border 
            Margin="-300,10,0,0"
            Stroke="#FBE9D0"
            BackgroundColor="#FBE9D0"
            HeightRequest="150" WidthRequest="150">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="100"></RoundRectangle>
            </Border.StrokeShape>
        </Border>

        <Border 
            Margin="0,10,-350,0"
            Stroke="#FBE9D0"
            BackgroundColor="#FBE9D0"
            HeightRequest="150" WidthRequest="150">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="100"></RoundRectangle>
            </Border.StrokeShape>
        </Border>


        <VerticalStackLayout Margin="0,-235,0,0">
            <Label Text="Bienvenido" FontSize="35" HorizontalOptions="Center" FontFamily="SegoeUILight" TextColor="#592418"/>
            <Label Text="Inicia Sesion en tu cuenta" FontSize="20" HorizontalOptions="Center" FontFamily="SegoeUILight" TextColor="#8C3623" />
        </VerticalStackLayout>

        <AbsoluteLayout 
            HorizontalOptions="Center"
            Margin="0,40,0,0">
            <Border
                AbsoluteLayout.LayoutBounds="0,0"
                MinimumWidthRequest="310"
                Stroke="#D9D6D2"
                StrokeThickness="1.5"
                BackgroundColor="#fff"
                HorizontalOptions="Center">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5, 5, 5, 5" />
                </Border.StrokeShape>
                <entryCustomizer:EntryCustomizer
                    MinimumHeightRequest="50"
                    Margin="10,0,0,0"
                    TextColor="#BF8924"
                    Keyboard="Numeric"
                    IsTextPredictionEnabled="True"
                    FontAttributes="Bold"
                    Text="{Binding inicioSesion.Cedula}"
                    FontSize="17"
                    FontFamily="SegoeUILight"
                    Placeholder="Cedula Identidad" PlaceholderColor="#BF8924"/>
            </Border>
            
            <Label 
                x:Name="MensajeCampoCedula"
                AbsoluteLayout.LayoutBounds="0,50"
                IsVisible="{Binding inicioSesion.EstadoCedula}"
                FontAttributes="Bold"
                Padding="0"
                Margin="0"
                FontFamily="SegoeUILight"
                Text="{Binding inicioSesion.MensajeCedula}" TextColor="Red"/>

            <Border
                AbsoluteLayout.LayoutBounds="0, 80"
                Margin="0,0,0,0"
                Stroke="#D9D6D2"
                StrokeThickness="1.5"
                MinimumWidthRequest="310"
                BackgroundColor="#fff"
                HorizontalOptions="Center">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5, 5, 5, 5" />
                </Border.StrokeShape>
                <entryCustomizer:EntryCustomizer
                    MinimumHeightRequest="50"
                    Margin="10,0,0,0"
                    FontSize="17"
                    Text="{Binding inicioSesion.Password}"
                    IsPassword="True"
                    TextColor="#BF8924"
                    FontAttributes="Bold"
                    FontFamily="SegoeUILight"
                    Placeholder="Contraseña" PlaceholderColor="#BF8924"/>
             </Border>

            <Label 
                AbsoluteLayout.LayoutBounds="0,130"
                IsVisible="{Binding inicioSesion.EstadoPassword}"
                Padding="0"
                Margin="0"
                FontAttributes="Bold"
                FontFamily="SegoeUILight"
                Text="{Binding inicioSesion.MensajePassword}" TextColor="Red"/>

            <entryCustomizer:ButtonCustomizer
                AbsoluteLayout.LayoutBounds="0,130"
                Margin="0,40,0,0"
                FontSize="20"
                TextColor="{ Binding inicioSesion.ColorText }"
                BackgroundColor="{ Binding inicioSesion.BackgroundButon }"
                Command="{Binding EnviarFormCommand}"
                HorizontalOptions="Center"
                MinimumWidthRequest="310"
                FontFamily="SegoeUIBold"
                CornerRadius="10"
                IsEnabled="{ Binding inicioSesion.HabilitarBoton }"
                Text="Iniciar Sesion"/>
            <Button 
                AbsoluteLayout.LayoutBounds="0,225"
                Margin="0,15,0,0"
                FontFamily="SegoeUIBold"
                TextColor="#BF7A24"
                FontSize="15"
                CornerRadius="10"
                HorizontalOptions="Center"
                MinimumWidthRequest="310"
                Text="¿Olvidaste tu contraseña?"
                BackgroundColor="White"/>
        </AbsoluteLayout>


        <Border 
            Margin="0,50,-300,0"
            Stroke="#FBE9D0"
            BackgroundColor="#FBE9D0"
            HeightRequest="150" WidthRequest="150">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="100"></RoundRectangle>
            </Border.StrokeShape>
        </Border>


        <Border 
            Margin="-350,-200,0,0"
            Stroke="#FBE9D0"
            BackgroundColor="#FBE9D0"
            HeightRequest="100" WidthRequest="100">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="100"></RoundRectangle>
            </Border.StrokeShape>
        </Border>

    </VerticalStackLayout>
</ContentPage>