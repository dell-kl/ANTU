<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANTU.Views.Fabricacion"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="#FFF"
             Title="Fabricacion">

    <Shell.TitleView>
        <FlexLayout 
            JustifyContent="SpaceBetween"
            AlignItems="Center">
            <VerticalStackLayout>
                <Label 
                    TextColor="#FFF"
                    FontFamily="SegoeUIBold"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Fabricacion Productos"></Label>
                <Label 
                    TextColor="#ECE2E2"
                    FontFamily="SegoeUILight"
                    FontSize="12"
                    Margin="0,-10,0,0"
                    Text="Proceso de productos en fabricacion"/>
            </VerticalStackLayout>

            <Border 
                Margin="0,0,10,0"
                WidthRequest="40"
                HeightRequest="40"
                Stroke="#E39400"
                BackgroundColor="#D49724"
                VerticalOptions="Center">

                <Border.Behaviors>
                    <toolkit:TouchBehavior
                        PressedBackgroundColor="#E39C16"/>
                </Border.Behaviors>

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5, 5, 5, 5" />
                </Border.StrokeShape>
                <StackLayout
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                    <Label 
                        VerticalTextAlignment="Center"
                        FontSize="20"
                        FontFamily="SegoeUIBold"
                        Text="+"></Label>
                </StackLayout>
            </Border>
        </FlexLayout>
    </Shell.TitleView>
</ContentPage>