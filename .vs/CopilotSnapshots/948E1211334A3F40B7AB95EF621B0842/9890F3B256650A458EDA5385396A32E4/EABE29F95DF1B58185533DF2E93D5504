using CommunityToolkit.Mvvm.ComponentModel;
using System.Collections.ObjectModel;

namespace ANTU.Models.Dto
{
    public partial class MateriaPrimaFormularioDto : ObservableObject
    {
        private ObservableCollection<FileResult> fileManyResults;
        public ObservableCollection<FileResult> FileManyResults { set => SetProperty(ref fileManyResults, value); get => fileManyResults; }

        private FileResult fileResults;
        public FileResult FileResults { set => SetProperty(ref fileResults, value); get => fileResults; }


        private string materiaPrima;
        public string MateriaPrima { set => SetProperty(ref materiaPrima, value); get=> materiaPrima; }

        private double kgStandard;
        public double KGStandard { set => SetProperty(ref kgStandard, value); get => kgStandard; }

        private decimal precio;
        public decimal Precio { set => SetProperty(ref precio, value); get => precio; }

        private int cantidad;
        public int Cantidad {  set =>  SetProperty(ref cantidad, value); get => cantidad; }


        // status para mensajes de error y para el boton de registrar
        private bool statusBotonRegistrar = false;
        public bool StatusBotonRegistrar {  set =>  SetProperty(ref statusBotonRegistrar, value); get => statusBotonRegistrar; }


        private bool statusMateriaPrima = true;
        public bool StatusMateriaPrima { set => SetProperty(ref statusMateriaPrima, value); get => statusMateriaPrima; }



        //campos para mostrar los mensajes de error.


        //metodo para limpiar formulario


        //metodo para llenar nuestra lista de imagenes.
    }
}
