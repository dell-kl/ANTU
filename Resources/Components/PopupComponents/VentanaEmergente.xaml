<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANTU.Resources.Components.PopupComponents.VentanaEmergente"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
             BackgroundColor="#80000000"
             CloseWhenBackgroundIsClicked="False">

    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Border
                BackgroundColor="#FFF"
                StrokeThickness="0"
                Padding="20">
            <StackLayout>
                <ActivityIndicator 
                    x:Name="LoadingElement"
                    IsRunning="True" Color="Orange"></ActivityIndicator>

                <Image
                    WidthRequest="50"
                    x:Name="ImagenIcon"/>
                <Label 
                    x:Name="Titulo"
                    FontFamily="SegoeUIBold"
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    TextColor="#000"/>
                <Label 
                    x:Name="Contenido"
                    FontFamily="SegoeUILight"
                    FontSize="15"
                    HorizontalTextAlignment="Center"
                    TextColor="#000"/>
                <Button
                    Margin="0,10,0,0"
                    FontFamily="SegoeUILight"
                    FontAttributes="Bold"
                    BackgroundColor="Orange"
                    x:Name="Button"
                    Clicked="Button_Clicked"
                    Text="Entendido"/>
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</mopup:PopupPage>