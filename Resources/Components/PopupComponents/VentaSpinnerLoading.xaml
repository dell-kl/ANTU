<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANTU.Resources.Components.PopupComponents.VentaSpinnerLoading"
             xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
             Title="VentaSpinnerLoading"
             BackgroundColor="#FFF"
             CloseWhenBackgroundIsClicked="False"
                 >
    <VerticalStackLayout
        VerticalOptions="Center">
        <Image
            WidthRequest="200"
            HeightRequest="200"
            IsAnimationPlaying="True"
            Source="spinner_antu.gif"/>
        <Label 
            FontFamily="SegoeUILight"
            FontAttributes="Bold"
            FontSize="15"
            TextColor="#000"
            Text="Cargando, espere ..."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</mopup:PopupPage>