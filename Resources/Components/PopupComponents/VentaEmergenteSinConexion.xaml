<?xml version="1.0" encoding="utf-8"?>
<mopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                            xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
                            x:Class="ANTU.Resources.Components.PopupComponents.VentaEmergenteSinConexion"
                            BackgroundColor="#FFFF"
                            CloseWhenBackgroundIsClicked="False">
    <VerticalStackLayout
        VerticalOptions="Center">
        <Image
            HeightRequest="270"
            Source="conexion_perdida.jpg"/>
        <Button
            HorizontalOptions="Center"
            BackgroundColor="#8C3623"
            TextColor="#FFF"
            Command="{Binding ReintentarPeticionCommand}"
            Text="&#xe7a2; Reintentar"
            x:Name="ReintentarPeticionButton"
            Clicked="ReintentarPeticionButton_OnClicked"
            FontFamily="MaterialAssets"/>
        
        <Label VerticalOptions="Center"
               WidthRequest="250"
               Margin="0,10,0,0"
               HorizontalTextAlignment="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span
                        TextColor="red"
                        Text="&#xe78f;"
                        FontSize="20"
                        FontAttributes="Bold"
                        FontFamily="MaterialAssets"/>
                    <Span
                        FontFamily="SegoeUILight"
                        x:Name="Contenido"
                        Text="{Binding Path=Descripcion}"
                        FontAttributes="Bold"
                        FontSize="15"
                        TextColor="red"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </VerticalStackLayout>
</mopup:PopupPage>