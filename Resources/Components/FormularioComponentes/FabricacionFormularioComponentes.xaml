<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANTU.Resources.Components.FormularioComponentes.FabricacionFormularioComponentes"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:dataForm="clr-namespace:Syncfusion.Maui.DataForm;assembly=Syncfusion.Maui.DataForm">
    <VerticalStackLayout>
        <Label 
            Margin="0,10,0,10"
            Text="Formulario FabricaciÃ³n"
            VerticalOptions="Center" 
            FontFamily="SegoeUIBold"
            HorizontalTextAlignment="Center"
            FontSize="25"
            TextColor="#000"
            HorizontalOptions="Center" />

        <FlexLayout
            AlignContent="Center"
            JustifyContent="SpaceBetween"
            Margin="0,0,0,10">
            <Button
                Text="&#xe72a;"
                BackgroundColor="Orange"
                TextColor="#FFF"
                FontSize="26"
                x:Name="AgregarEntradasCatalogoProductoUsar"
                Clicked="AgregarEntradasCatalogoProductoUsar_OnClicked"
                HorizontalOptions="Start"
                MaximumWidthRequest="50"
                FontFamily="MaterialSymbolSharp"/>
            <Label
                HorizontalTextAlignment="Center"
                MaximumWidthRequest="250">
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            TextColor="#000"
                            Text="Agrega o elimina ENTRADAS en "
                            FontFamily="SegoeUILight"/>
                        <Span
                            FontFamily="SegoeUIBold"
                            TextColor="#000"
                            Text="Materia Prima a Usar"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button
                Margin="0,0,0,0"
                Text="&#xf51c;"
                BackgroundColor="Red"
                TextColor="#FFF"
                FontSize="26"
                x:Name="EliminarEntradasCatalogoProductoUsar"
                Clicked="EliminarEntradasCatalogoProductoUsar_OnClicked"
                HorizontalOptions="End"
                MaximumWidthRequest="50"
                FontFamily="MaterialSymbolSharp"/>

        </FlexLayout>
        
        <dataForm:SfDataForm
            HeightRequest="490"
            ValidationMode="PropertyChanged"
            AutoGenerateItems="True"
            x:Name="FormularioFabricacion"/>
        
        <Button
            x:Name="RegistrarFabricacion"
            Text="&#xe784; Enviar"
            FontFamily="MaterialAssets"
            FontSize="17"
            IsEnabled="True"
            IsVisible="True"    
            TextColor="#000"
            BackgroundColor="#B2F8A400"/>

    </VerticalStackLayout>
</ContentView>
