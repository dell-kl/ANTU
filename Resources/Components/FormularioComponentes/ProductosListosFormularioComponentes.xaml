<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dataForm="clr-namespace:Syncfusion.Maui.DataForm;assembly=Syncfusion.Maui.DataForm"
             xmlns:viewModel="clr-namespace:ANTU.ViewModel"
             x:Class="ANTU.Resources.Components.FormularioComponentes.ProductosListosFormularioComponentes"
             x:DataType="viewModel:ProductoListoDetalleViewModel">
    <VerticalStackLayout>
        <Grid RowDefinitions=".7*,.5*" ColumnDefinitions="*">
            <dataForm:SfDataForm
                AutoGenerateItems="True"
                Grid.Row="0"
                Grid.Column="0"
                ValidationMode="PropertyChanged"
                x:Name="FormularioProductosListos"
                ValidateForm="FormularioProductosListos_OnValidateForm"
                GenerateDataFormItem="FormularioProductosListos_OnGenerateDataFormItem"/>
            <VerticalStackLayout
                Padding="5,10,5,5"
                Grid.Row="1"
                Grid.Column="0"
            >
                <Button
                    BackgroundColor="#BF7A24"
                    TextColor="#FFF"
                    FontAttributes="Bold"
                    FontSize="17"
                    x:Name="RegistrarDatosProductoBodega"
                    Clicked="RegistrarDatosProductoBodega_OnClicked"
                    FontFamily="MaterialAssets"
                    Text="&#xe78c; Registrar"/>
            </VerticalStackLayout>  
        </Grid>
    </VerticalStackLayout>
</ContentView>